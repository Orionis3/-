{
  "compilerOptions": {
    "target": "esnext", // 使用最新ES版本（需配合Babel转译）
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable"],
    "allowJs": true, // 允许混合JS和TS
    "sourceMap": true, // 生成源映射（便于调试）
    "strict": false // 关闭严格模式（新手友好）
  },
  "include": ["src/**/*.js", "src/**/*.vue", "src/**/*.json"],
  "exclude": ["node_modules", "dist"]
}
